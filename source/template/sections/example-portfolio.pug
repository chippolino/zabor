          svg(xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 36 36")
            path(d="M18 0c9.928 0 18 8.07 18 18 0 9.928-8.072 18-18 18S0 27.927 0 18C0 8.07 8.072 0 18 0zm0 32.437c7.352 0 13.453-5.533 14.324-12.657H16.067l4.017 4.055a1.783 1.783 0 1 1-1.25 3.032c-.455 0-.91-.19-1.25-.53l-7.087-7.087a1.784 1.784 0 0 1 0-2.501l7.086-7.087a1.784 1.784 0 0 1 2.501 0 1.785 1.785 0 0 1 0 2.502l-4.055 4.054h16.295C31.453 9.094 25.352 3.562 18 3.562c-7.958 0-14.438 6.48-14.438 14.437 0 7.958 6.48 14.438 14.438 14.438z")
